<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>
    <div class="container">
      <% var url = "/festivals/" + festival.id + "?_method=PUT" %>
      <form method="POST" action="<%= url %>" >
        <input required name="title" value="<%= festival.title %>" />
        <a href="/festivals" class="btn #e57373 red lighten-2">Cancel</a>
        <button class="btn light-blue darken-3">Save</button>
     </form>
   </div>
  </body>
</html>