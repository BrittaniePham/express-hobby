<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>My Music Events</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add event</h3>
       <form action='/festivals' method='post'>
         <input type='text' name='title' placeholder='Title' />
         <button class='btn btn-waves light-blue darken-3' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>Edit</th>
         <th>x</th>
       </thead>
       <tbody>
         <% festivals.forEach( function(festival) { %>
         <% var url = "/festivals/" + festival.id + "?_method=DELETE" %>
         <% var editUrl = "festivals/" + festival.id + "/edit" %>
          <tr>
            <td><%= festival.title %></td>
            <td>
              <a class="btn light-blue darken-3" href="<%= editUrl %>">Edit</a>
            </td>
            <td>
              <form method="POST" action="<%= url %>">
                <button class="btn #7e57c2 #e57373 red lighten-2">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
       </tbody>
     </table>
   </body>
</html>